[user]
	name  = Hayato Kawai
	email = fohte.hk@gmail.com
	signingkey = Fohte

[core]
	pager = less --tabs=4 -RFX
	excludesfile = ~/.gitignore_global
	commentchar = ";"

[pager]
	diff = delta --highlight-removed --file-style box --hunk-style plain --theme 'Monokai Extended Bright'

[interactive]
	diffFilter = delta --highlight-removed --file-style box --hunk-style plain --theme 'Monokai Extended Bright'

[push]
	default = current
	followTags = true

[url "git@github.com:"]
	pushInsteadOf = https://github.com/
	pushInsteadOf = git://github.com/
	insteadOf = https://github.com/
	insteadOf = git://github.com/
	insteadOf = gh:

[alias]
	amend = commit --amend
	fixup = commit -n --fixup
	wip = commit -n -m 'WIP [CI SKIP]'

[merge]
	ff = false
	conflictStyle = diff3
[pull]
	rebase = true
[commit]
	gpgsign = true
[gpg]
	program = gpg
[diff]
	algorithm = histogram
[github]
	user = fohte
[status]
	showUntrackedFiles = all
[include]
	path = ~/.local/.gitconfig
[init]
	templatedir = ~/.git_templates

[ghq]
	root = ~/.cache/dein/repos
	root = ~/.go
	root = ~/.ghq
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold 239
	newNormal = green
	newHighlight = green bold 239
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = netlify
